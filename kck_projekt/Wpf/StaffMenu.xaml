<Window x:Class="kck_projekt.Wpf.StaffMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kck_projekt.Wpf"
             mc:Ignorable="d" 
             Title="Menu" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="5">
            <Label Margin="5" HorizontalAlignment="Center">Menu</Label>
            <Button Padding="10,5" Margin="5" Click="ReservationsButtonClicked" >Rezerwacje</Button>
            <Button Padding="10,5" Margin="5" Click="CarsButtonClicked" >Samochody</Button>
            <Button Padding="10,5" Margin="5" Click="MarksButtonCliced" >Marki</Button>
            <Button Padding="10,5" Margin="5" Click="ModelsButtonClicked" >Modele</Button>
            <Button Name="userButton" IsEnabled="False" Padding="10,5" Margin="5" Click="UserButtonClicked" >Użytkownicy</Button>
        </StackPanel>
        
        <ContentControl Grid.Column="1" x:Name="contentControl"></ContentControl>
    </Grid>
</Window>
