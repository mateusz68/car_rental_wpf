<UserControl x:Class="kck_projekt.Wpf.AppSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kck_projekt.Wpf"
             mc:Ignorable="d" 
             Loaded="Window_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Margin="5" Grid.Row="0" Grid.Column="0">Tryb aplikacji:</Label>
        <RadioButton Name="wpfRadio" GroupName="graphicType">Graficzny</RadioButton>
        <RadioButton Name="consoleRadio" GroupName="graphicType">Konsolowy</RadioButton>
        <Button Margin="5" Padding="5,10" Click="SaveButtonClicked">Zapisz</Button>
    </StackPanel>
</UserControl>
